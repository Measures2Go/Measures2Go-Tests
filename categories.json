---
[
{% for category in site.categories %}
  {
    "name": "{{category | first | capitalize }}",
    "tests": [
      {% for posts in category %}
        {% for post in posts %}
          {% unless post.id == null %}
          {
            "name": "{{post.name}}",
            "id": "{{post.id | split: '/' | last }}"
          }
          {% endunless %}
          {% unless forloop.last %},{% endunless %}
        {% endfor %}
      {% endfor %}
    ]
  }
  {% unless forloop.last %},{% endunless %}
{% endfor %}
]
